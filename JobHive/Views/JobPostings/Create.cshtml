}

<h1>Create JobPosting</h1>

<form action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Title" class="form-label">Title</label>
        <input type="text" asp-for="Title" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label">Description</label>
        <textarea type="text" asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="mb-3">
        <label asp-for="Company" class="form-label">Company</label>
        <input type="text" asp-for="Company" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Location" class="form-label">Location</label>
        <input type="text" asp-for="Location" class="form-control" />
    </div>

    <button class="btn btn-primary" type="submit">Create</button>
</form>